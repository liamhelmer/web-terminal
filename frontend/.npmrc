# pnpm configuration
# Per spec-kit/004-frontend-spec.md

# Use pnpm for package management
package-manager=pnpm@8.15.0

# Strict peer dependencies
strict-peer-dependencies=true

# Automatically install peers
auto-install-peers=true

# Shamefully hoist for compatibility (if needed)
shamefully-hoist=false

# Lock file settings
lockfile=true

# Node version check
engine-strict=true

# Progress display
progress=true